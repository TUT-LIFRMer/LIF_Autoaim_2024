[Unit]
Description=Prepare Autoaim Service
After=network.target

[Service]
ExecStart=/bin/bash -c ' chmod 666 /dev/ttyTHS0 /dev/ttyTHS1 \
                        && modprobe can && modprobe can_raw \
                        && modprobe can_dev \
                        && modprobe mttcan \
                        && ip link set can0 type can bitrate 100000 \
                        && ip link set up can0'
User=root
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target


